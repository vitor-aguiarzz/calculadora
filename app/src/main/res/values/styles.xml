<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:radius">16dp</item>
        <item name="backgroundTint">@android:color/black</item>
        <item name="android:maxWidth">320dp</item>
    </style>
    <style name="CalculatorOperatorButton" parent="CalculatorButton">
        <item name="backgroundTint">@android:color/holo_blue_dark</item>
    </style>
    <style name="CalculatorClearButton" parent="CalculatorButton">
        <item name="backgroundTint">@android:color/holo_red_dark</item>
    </style>
    <style name="CalculatorResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/digital7</item>
    </style>
    <style name="CalculatorHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:fontFamily">@font/eurostile_black</item>
        <item name="android:text">@string/cassio</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CalculatorEqualsButton" parent="CalculatorButton">
        <item name="android:layout_span">4</item>
        <item name="backgroundTint">@android:color/holo_orange_dark</item>
    </style>
</resources>